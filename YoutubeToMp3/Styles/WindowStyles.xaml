<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Main window ModernStyle -->
    <Style TargetType="{x:Type Window}" x:Key="MainWindowModernStyle">
        <!--<Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>-->
        <Setter Property="Background" Value="{StaticResource BgDarkBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource FgOrangeBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource ForegroundSimpleBorderBrush}"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome UseAeroCaptionButtons="True"
                              GlassFrameThickness="0"
                              CornerRadius="20"
                              CaptionHeight="40"
                              ResizeBorderThickness="9"
                              RenderOptions.EdgeMode="Unspecified"           
                              />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>