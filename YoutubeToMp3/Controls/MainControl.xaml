<UserControl x:Class="YoutubeToMp3.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeToMp3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    
    <Grid>

        <!-- GRID definitions -->
        <Grid.RowDefinitions>

            <!-- 0 Url -->
            <RowDefinition Height="*"/>

            <!-- 1 Path -->
            <RowDefinition Height="auto"/>
            
            <!-- 2 FFmpeg-->
            <RowDefinition Height="auto"/>
            
            <!-- 3 Thumbnail and info -->
            <RowDefinition Height="auto"/>
            
            <!-- 4 Info -->
            <RowDefinition Height="*"/>

            <!-- 5 Download video button -->
            <RowDefinition Height="auto"/>

            <!-- 6 Download audio button -->
            <RowDefinition Height="auto"/>

            <!-- 7 STATUS message-->
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <!--#region URL SECTION -->
        <Grid Grid.Row="0"
              Margin="0">
            <Grid.ColumnDefinitions>

                <!-- 0 Label -->
                <ColumnDefinition Width="auto"/>

                <!-- 1 Textbox-->
                <ColumnDefinition Width="*"/>

                <!-- 3 Paste button -->
                <ColumnDefinition Width="auto"/>

            </Grid.ColumnDefinitions>
            
            <!-- Label -->
            <TextBlock Text="Url: "/>
            
            <!-- Url textbox -->
            <TextBox Grid.Column="1"
                     x:Name="urlTextBox"
                     Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                     TextChanged="UrlTextBoxTextChanged"
                     />

            <!-- Paste button -->
            <Button Grid.Column="2"
                    Click="PasteButtonClick"
                    Content="Paste"
                    />

        </Grid>
        <!--#endregion-->
        <!--#region DOWNLOAD PATH SECTION -->
        <Grid Grid.Row="1"
              Margin="0">
            <Grid.ColumnDefinitions>

                <!-- 0 Label -->
                <ColumnDefinition Width="auto"/>

                <!-- 1 Textbox-->
                <ColumnDefinition Width="*"/>

                <!-- 3 Open dialog button -->
                <ColumnDefinition Width="auto"/>

            </Grid.ColumnDefinitions>

            <!-- Label -->
            <TextBlock Text="Download folder: "/>

            <!-- Url textbox -->
            <TextBox Grid.Column="1"
                     x:Name="downloadPathTextbox"
                     Text="{Binding DownloadPath, Mode=TwoWay}"
                     />

            <!-- Open dialog button -->
            <Button Grid.Column="2"
                    Content=" ... "
                    />

        </Grid>
        <!--#endregion-->
        <!--#region FFMPEG PATH -->
        <Grid Grid.Row="2"
              Margin="0">
            <Grid.ColumnDefinitions>

                <!-- 0 Label -->
                <ColumnDefinition Width="auto"/>

                <!-- 1 Textbox-->
                <ColumnDefinition Width="*"/>

                <!-- 3 Open dialog button -->
                <ColumnDefinition Width="auto"/>

            </Grid.ColumnDefinitions>

            <!-- Label -->
            <TextBlock Text="Ffmpeg folder: "/>

            <!-- Url textbox -->
            <TextBox Grid.Column="1"
                     x:Name="ffmpegPathTextbox"
                     Text="{Binding FfmpegPath, Mode=TwoWay}"
                     />

            <!-- Open dialog button -->
            <Button Grid.Column="2"
                    Content=" ... "
                    />

        </Grid>
        <!--#endregion-->
        <!--#region INFO -->
        <!-- INFO -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>

                <!--0 Thumbnail-->
                <ColumnDefinition Width="auto"/>

                <!--1 Info grid-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--THUMBNAIL-->
            <Border Grid.Column="0"
                    Background="Black">

                <Image Source="{Binding StreamInfoViewModel.Thumbnail, FallbackValue={StaticResource DefaultThumbnail}}"
                       />
            </Border>

            <!--#region INFO REGION -->
            <!--INFO-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>

                    <!--0 Title -->
                    <RowDefinition Height="auto"/>

                    <!--1 Author -->
                    <RowDefinition Height="auto"/>

                    <!--2 Duration -->
                    <RowDefinition Height="auto"/>

                    <!--3 Upload date -->
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>

                <!--TITLE-->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text=""/>
                    <TextBlock Text="{Binding StreamInfoViewModel.Title}"/>
                </StackPanel>

                <!-- AUTHOR -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Margin="5"
                            >
                    <TextBlock Text="Author: "/>
                    <TextBlock Text="{Binding StreamInfoViewModel.Author}"/>
                </StackPanel>

                <!-- DURATION -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="5"                            
                            >
                    <TextBlock Text="Duration: "/>
                    <TextBlock Text="{Binding StreamInfoViewModel.Duration}"/>
                </StackPanel>

                <!-- UPLOAD DATE -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            Margin="5"
                            >
                    <TextBlock Text="Uploaded: "/>
                    <TextBlock Text="{Binding StreamInfoViewModel.UploadDate}"/>
                </StackPanel>


            </Grid>
            <!--#endregion-->

        </Grid>
        <!--#endregion-->

        <!--#region STATUS -->
        <TextBlock Grid.Row="5"
                   Foreground="{Binding StatusMessage, Converter={StaticResource MessageToBrushConverter}}"
                   Text="{Binding StatusMessage.Message}"
                   Style="{StaticResource StatusTextblock}"    
                   Margin="51,0,0,5"
                   TextTrimming="CharacterEllipsis"
                   />
        
        
        <!--#endregion-->

        <!--#region DOWNLOAD BUTTONS -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DOWNLOAD VIDEO button -->
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonDownload}"
                    Tag="Download Video"
                    Command="{Binding DownloadVideoCommandAsync}"
                    />

            <!-- DOWNLOAD AUDIO button -->
            <Button Grid.Column="1"
                    Style="{StaticResource ButtonDownload}"
                    Tag="Download Audio"
                    Command="{Binding DownloadAudioCommandAsync}"
                    />
        </Grid>




        <!--#endregion-->

    </Grid>
</UserControl>
