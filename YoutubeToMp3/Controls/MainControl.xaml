<UserControl x:Class="YoutubeToMp3.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeToMp3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <!-- GRID definitions -->
        <Grid.RowDefinitions>

            <!-- URL textblock -->
            <RowDefinition Height="*"/>

            <!-- Movie info -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <!-- URL textbox-->
        <TextBox Grid.Row="0"
                 x:Name="urlTextBox"
                 Height="25"
                 Width="500"
                 Padding="1"
                 Margin="5"
                 Text="{Binding VideoViewModel.Url, Mode=OneWayToSource}"
                 TextChanged="urlTextBox_TextChanged"
                 />

        <!-- INFO -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- THUMBNAIL -->
            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Width="200"
                    Height="200">
                <Image 
                   Width="200"
                   Height="200"               
                   Source="{Binding VideoViewModel.Thumbnail}"
                   />
            </Border>


            <!-- info -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>

                    <!-- property name -->
                    <RowDefinition Height="*"/>

                    <!-- property value-->
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <!-- TITLE -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <TextBlock Text="Title: "/>
                    <TextBlock Text="{Binding VideoViewModel.Title}"/>
                </StackPanel>

                <!-- DURATION -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal">
                    <TextBlock Text="Duration: "/>
                    <TextBlock Text="{Binding VideoViewModel.Duration}"/>
                </StackPanel>

            </Grid>
        </Grid>

        <!-- DOWNLOAD BUTTON -->
        <Button Grid.Row="2"
                Command="{Binding DownloadCommand}"
                Content="Click me"
                Width="70"
                Height="22"
                Padding="1"
                />

        <TextBlock Grid.Row="3"
                   Text="Downloading..."
                   FontSize="16"
                   Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}"
                   />
    </Grid>
</UserControl>
