<UserControl x:Class="YoutubeToMp3.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeToMp3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    
    <Grid>

        <!-- GRID definitions -->
        <Grid.RowDefinitions>

            <!-- 0 URL icon/textblock/icon -->
            <RowDefinition Height="*"/>

            <!-- 1 Thumbnail and info -->
            <RowDefinition Height="auto"/>
            
            <!-- 2 Info -->
            <RowDefinition Height="*"/>

            <!-- 3 Download video button -->
            <RowDefinition Height="auto"/>

            <!-- 4 Download audio button -->
            <RowDefinition Height="auto"/>

            <!-- 5 STATUS message-->
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <!--#region URL SECTION -->
        <Grid Grid.Row="0"
              Margin="0">
            <Grid.ColumnDefinitions>

                <!-- 0 Icon -->
                <ColumnDefinition Width="auto"/>

                <!-- 1 Textbox-->
                <ColumnDefinition Width="*"/>

                <!-- 2 X button -->
                <ColumnDefinition Width="auto"/>

                <!-- 3 Paste button -->
                <ColumnDefinition Width="auto"/>
                
            </Grid.ColumnDefinitions>

            <!-- ICON www -->
            <Image Grid.Column="0" 
                   Source="pack://application:,,,/Images/modern_www.png"                               
                   Width="34"
                   Height="34" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="10,-6,5,5"
                   />

            <!-- URL textbox -->
            <TextBox Grid.Column="1"
                     x:Name="urlTextBox"
                     Style="{StaticResource EnterUrlTextBoxStyle}"
                     Text="{Binding Url, Mode=TwoWay}"
                     TextChanged="urlTextBox_TextChanged"
                     />

            <!-- PASTE button -->
            <Button Grid.Column="3"
                    Style="{StaticResource ButtonPaste}"
                    Tag="pack://application:,,,/Images/paste_modern_color.png"
                    Command="{Binding PasteClipboardCommand}"
                    />

        </Grid>
        <!--#endregion-->

        <!--#region INFO -->
        <!-- INFO -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>

                <!--0 Thumbnail-->
                <ColumnDefinition Width="auto"/>

                <!--1 Info grid-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--THUMBNAIL-->
            <Border Grid.Column="0"
                    BorderBrush="{StaticResource FgOrangeBrush}"
                    BorderThickness="0"
                    Background="Black"
                    Margin="50,0,10,10"
                    Width="225"
                    Height="170">

                <Image Source="{Binding StreamDataViewModel.Thumbnail}"
                       Style="{StaticResource ThumbnailStyle}"
                       />
            </Border>

            <!--#region INFO REGION -->
            <!--INFO-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>

                    <!--0 Title -->
                    <RowDefinition Height="auto"/>

                    <!--1 Author -->
                    <RowDefinition Height="auto"/>

                    <!--2 Duration -->
                    <RowDefinition Height="auto"/>

                    <!--3 Upload date -->
                    <RowDefinition Height="auto"/>

                    <!--4 Video Size -->
                    <RowDefinition Height="auto"/>
                    
                    <!--5 Audio Size -->
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>

                <!--TITLE-->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="5"
                            >
                    <TextBlock Style="{StaticResource BasicTextblock}"
                               Text="Title: "
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}"
                               Text="{Binding StreamDataViewModel.Title}"
                               />
                </StackPanel>

                <!-- AUTHOR -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Margin="5"
                            >
                    <TextBlock Text="Author: "
                               Style="{StaticResource BasicTextblock}"
                               
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}" 
                               Text="{Binding StreamDataViewModel.Author}"
                               />
                </StackPanel>

                <!-- DURATION -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="5"                            
                            >
                    <TextBlock Style="{StaticResource BasicTextblock}" 
                               Text="Duration: "
                               
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}" 
                               Text="{Binding StreamDataViewModel.Duration}"
                               />
                </StackPanel>

                <!-- UPLOAD DATE -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            Margin="5"
                            >
                    <TextBlock Style="{StaticResource BasicTextblock}" 
                               Text="Uploaded: "
                               Margin="0"
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}"
                               Text="{Binding StreamDataViewModel.UploadDate}"
                               />
                </StackPanel>

                <!-- SIZE Video -->
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            Margin="5"
                            >
                    <TextBlock Style="{StaticResource BasicTextblock}" 
                               Text="Video Size: "
                               Margin="0"
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}"
                               Text="{Binding StreamDataViewModel.VideoSize}"
                               />
                </StackPanel>

                <!-- SIZE Audio -->
                <StackPanel Grid.Row="5"
                            Orientation="Horizontal"
                            Margin="5"
                            >
                    <TextBlock Style="{StaticResource BasicTextblock}" 
                               Text="Audio Size: "
                               Margin="0"
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}"
                               Text="{Binding StreamDataViewModel.AudioSize}"
                               />
                </StackPanel>


            </Grid>
            <!--#endregion-->

        </Grid>
        <!--#endregion-->

        <!--#region STATUS -->
        <TextBlock Grid.Row="3"
                   Foreground="Wheat"
                   Text="{Binding StatusMessage}"
                   Style="{StaticResource StatusTextblock}"    
                   Margin="51,0,0,5"
                   TextTrimming="CharacterEllipsis"
                   />
        
        
        <!--#endregion-->

        <!--#region DOWNLOAD BUTTONS -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DOWNLOAD VIDEO button -->
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonDownload}"
                    Tag="Download Video"
                    Command="{Binding DownloadVideoCommandAsync}"
                    />

            <!-- DOWNLOAD AUDIO button -->
            <Button Grid.Column="1"
                    Style="{StaticResource ButtonDownload}"
                    Tag="Download Audio"
                    Command="{Binding DownloadAudioCommandAsync}"
                    />
        </Grid>




        <!--#endregion-->

    </Grid>
</UserControl>
