<UserControl x:Class="YoutubeToMp3.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeToMp3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid>

        <!-- GRID definitions -->
        <Grid.RowDefinitions>

            <!-- 0 URL icon/textblock/icon -->
            <RowDefinition Height="*"/>

            <!-- 1 Thumbnail and info -->
            <RowDefinition Height="auto"/>
            
            <!-- 2 Info -->
            <RowDefinition Height="*"/>

            <!-- 3 Download video button -->
            <RowDefinition Height="auto"/>

            <!-- 4 Download audio button -->
            <RowDefinition Height="auto"/>

            <!-- 5 STATUS message-->
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <!--#region URL SECTION -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>

                <!-- 0 Icon -->
                <ColumnDefinition Width="auto"/>

                <!-- 1 Textbox-->
                <ColumnDefinition Width="*"/>

                <!-- 2 Paste button -->
                <ColumnDefinition Width="auto"/>

            </Grid.ColumnDefinitions>

            <!-- ICON www -->
            <Image Grid.Column="0" 
                   Source="pack://application:,,,/Images/modern_www.png"                               
                   Width="38"
                   Height="38" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="10,-8,5,5"
                   />

            <!-- URL textbox -->
            <TextBox Grid.Column="1"
                     x:Name="urlTextBox"
                     Style="{StaticResource EnterUrlTextBoxStyle}"
                     Text="{Binding Url, Mode=OneWayToSource}"
                     TextChanged="urlTextBox_TextChanged"
                     />
            
            <!-- PASTE button -->
            <Button Grid.Column="2"
                    Style="{StaticResource ButtonPaste}"
                    Tag="pack://application:,,,/Images/paste_modern_color.png"
                    />

        </Grid>
        <!--#endregion-->
        
        <!--#region INFO -->
        <!-- INFO -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                
                <!-- 0 Thumbnail -->
                <ColumnDefinition Width="auto"/>
                
                <!-- 1 Info grid -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- THUMBNAIL -->
            <Border Grid.Column="0"
                    BorderBrush="{StaticResource FgOrangeBrush}"
                    BorderThickness="0"
                    Background="Black"
                    Margin="20,10,10,10"
                    Width="266"
                    Height="200">

                <Image Source="pack://application:,,,/Images/youtube_modern_100.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Width="100"
                       Height="100"
                       />
                <!--<Image
                                 
                   Source="{Binding Thumbnail}"
                   HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                   />-->
            </Border>
                
            <!-- INFO -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>

                    <!-- 0 Title -->
                    <RowDefinition Height="*"/>

                    <!-- 1 Author -->
                    <RowDefinition Height="*"/>
                    
                    <!-- 2 Duration -->
                    <RowDefinition Height="*"/>
                    
                    <!-- 3 Something -->
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <!-- TITLE -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <TextBlock Style="{StaticResource BasicTextblock}"
                               Text="Title: "
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}"
                               Text="{Binding Title}"
                               />
                </StackPanel>

                <!-- AUTHOR -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal">
                    <TextBlock Text="Author: "
                               Style="{StaticResource BasicTextblock}"
                               Margin="0"
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}" 
                               Text="{Binding Author}"
                               />
                </StackPanel>

                <!-- DURATION -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal">
                    <TextBlock Style="{StaticResource BasicTextblock}" 
                               Text="Duration: "
                               Margin="0"
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}" 
                               Text="{Binding Duration}"
                               />
                </StackPanel>

                <!-- UPLOAD DATE -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal">
                    <TextBlock Style="{StaticResource BasicTextblock}" 
                               Text="Uploaded: "
                               Margin="0"
                               />
                    <TextBlock Style="{StaticResource WhiteTextblock}"
                               Text="{Binding UploadDate}"
                               />
                </StackPanel>

            </Grid>
        </Grid>
        <!--#endregion-->
        
        <!--#region DOWNLOAD BUTTONS -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DOWNLOAD VIDEO button -->
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonDownload}"
                    Tag=""
                    Command="{Binding DownloadVideoCommandAsync}"
                    />

            <!-- DOWNLOAD AUDIO button -->
            <Button Grid.Column="1"
                    Style="{StaticResource ButtonDownload}"
                    Tag=""
                    Command="{Binding DownloadAudioCommandAsync}"
                    />
        </Grid>
        
        
        

        <!--#endregion-->
        
        <!--#region STATUS -->
        
        <TextBlock Grid.Row="3"
                   Margin="10,10,10,0"
                   Text="{Binding StatusMessage}"
                   Style="{StaticResource BasicTextblock}"
                   HorizontalAlignment="Center"
                   
                   FontSize="20"
                   />
        
        <!--#endregion-->
        
    </Grid>
</UserControl>
