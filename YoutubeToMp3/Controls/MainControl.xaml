<UserControl x:Class="YoutubeToMp3.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeToMp3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <!-- GRID definitions -->
        <Grid.RowDefinitions>

            <!-- URL textblock -->
            <RowDefinition Height="*"/>

            <!-- INFO -->
            <RowDefinition Height="auto"/>
            
            <!-- DOWNLOAD buttons -->
            <RowDefinition Height="*"/>
            
            <!-- STATUS message-->
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <!--#region URL -->
        <!-- URL textbox-->
        <TextBox Grid.Row="0"
                 x:Name="urlTextBox"
                 Height="30"
                 FontSize="18"
                 Width="500"
                 Padding="2"
                 Margin="5"
                 Text="{Binding Url, Mode=OneWayToSource}"
                 TextChanged="urlTextBox_TextChanged"
                 />

        <!--#endregion-->
        
        <!--#region INFO -->
        <!-- INFO -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                
                <!-- thumbnail -->
                <ColumnDefinition Width="auto"/>
                
                <!-- info -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- THUMBNAIL -->
            <Border Grid.Column="0"
                    BorderBrush="Red"
                    BorderThickness="1"
                    Margin="5"
                    Width="150"
                    Height="150">
                <Image
                   Width="150"
                   Height="150"               
                   Source="{Binding Thumbnail}"
                   
                   />
            </Border>
                

                <!-- INFO -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>

                    <!-- Title -->
                    <RowDefinition Height="*"/>

                    <!-- Author -->
                    <RowDefinition Height="*"/>
                    
                    <!-- Duration -->
                    <RowDefinition Height="*"/>
                    
                    <!-- Something -->
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <!-- TITLE -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <TextBlock Text="Title: " />
                    <TextBlock Text="{Binding Title}"/>
                </StackPanel>

                <!-- TITLE -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal">
                    <TextBlock Text="Author: "/>
                    <TextBlock Text="{Binding Author}"/>
                </StackPanel>

                <!-- DURATION -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal">
                    <TextBlock Text="Duration: "/>
                    <TextBlock Text="{Binding Duration}"/>
                </StackPanel>

                <!-- SOMETHING -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal">
                    <TextBlock Text="Something: "/>
                    <TextBlock Text="{Binding}"/>
                </StackPanel>

            </Grid>
        </Grid>
<!--#endregion-->
        
        <!--#region DOWNLOAD BUTTONS -->

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DOWNLOAD video button -->
            <Button Grid.Column="0"
                Command="{Binding DownloadVideoCommandAsync}"
                Content="VIDEO"
                Width="70"
                Height="22"
                Padding="1"
                />

            <!-- DOWNLOAD audio button -->
            <Button Grid.Column="1"
                Command="{Binding DownloadAudioCommandAsync}"
                Content="AUDIO"
                Width="70"
                Height="22"
                Padding="1"
                />
            
        </Grid>
        
        
        

        <!--#endregion-->
        
        <!--#region STATUS -->
        
        <TextBlock Grid.Row="3"
                   Text="{Binding StatusMessage}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="20"
                   />
        
        <!--#endregion-->
        
    </Grid>
</UserControl>
